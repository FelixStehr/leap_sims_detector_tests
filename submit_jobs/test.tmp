#test.mac
/control/verbose 2
/run/verbose 2
/leap/phys/addPhysics polarized


/run/printProgress 2

/run/initialize

#-----------geometry-----------------------------
/leap/det/SetCoreThick corethick mm
/leap/det/SetConvThick convthick mm
/leap/det/update

/polarization/manager/verbose 1
/polarization/volume/set IronCore 0. 0. 1
/polarization/volume/list

#-----------particle-gunlike-------------------------------
/gps/energy eKin MeV
/gps/number NBunch
/gps/particle e-
/gps/pos/centre 0.0 0.0 -2.0m

#---------gps-commands-------------------------------------
#simply comment if not needed

/gps/pos/type Beam
/gps/pos/sigma_r 1  micron
/gps/ang/type beam2d
/gps/ang/sigma_x 10 mrad
/gps/ang/sigma_y 10 mrad
/gps/ang/rot1 0 1 0
/gps/ang/rot2 1 0 0

